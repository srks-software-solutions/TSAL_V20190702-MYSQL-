@model Tata.Models.tbluser
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TATA</title>

    <link rel="apple-touch-icon" sizes="144x144" href="~/Images/apple-touch-icon-ipad-retina.png" />
    <link rel="apple-touch-icon" sizes="114x114" href="~/Images/apple-touch-icon-iphone-retina.png" />
    <link rel="apple-touch-icon" sizes="72x72" href="~/Images/apple-touch-icon-ipad.png" />
    <link rel="apple-touch-icon" sizes="57x57" href="~/Images/apple-touch-icon-iphone.png" />
    <link rel="shortcut icon" type="image/x-icon" href="~/Images/120px-Tata_logo.ico" />

    <!-- bootstrap -->
    <link href="~/css/bootstrap/bootstrap.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/font-awesome-4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/jquery-ui.css" />

    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
    @*<link href="~/Content1/VirtualKeyboard/css/keyboard.min.css" rel="stylesheet" />*@

     @*Disabling Back Button*@
    <script type="text/javascript">
        window.onload = window.history.forward(0);  //calling function on window onload
    </script>

</head>
<body>

    <div id="wrapper">

        <div id="content" class="c-login clearfix">

            <div class="header">
                @*<a href="index.html">
                    <img src="~/images/logo.png"></a>*@
                <h1 class="text-center login-title" style="color: #acc11c; font-family: Calibri; font-size: 50px"><b>Sign in</b></h1>
           <hr />
                 </div>
            <!-- /header -->

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true) 
			
                <div class="widget-content" style="background-color: #38353c;">
                    
                    @*<h1 class="text-center login-title" style="color: #acc11c; font-family: Calibri; font-size: 50px"><b>Sign in</b></h1>*@
                    <div class="form-signin">
                        @Html.TextBoxFor(model => model.UserName, new { @id = "username", @class = "form-control", @name = "username", @placeholder = "User Name(Required)", @required = "required" })
                        @Html.ValidationMessageFor(model => model.UserName)
                        @Html.PasswordFor(model => model.Password, new { @id = "password", @class = "form-control", @name = "password", @placeholder = "Password(Required)", @required = "required" })
                        @Html.ValidationMessageFor(model => model.Password)
                        <button class="btn btn-lg btn-primary btn-block icon-user icon-white" type="submit" style="background: #FB9D00;">
                            <b>Sign in</b>
                        </button>
                        <br />

                        @* Wrong User Name *@
                        @if (TempData["username"] != null)
                        {
                            <p style="color: red; font-weight: 900;">@TempData["username"]</p>
                        }
                        
                        @* Wrong Password *@
                        @if (TempData["Password"] != null)
                        {
                            <p style="color: red; font-weight: 900;">@TempData["Password"]</p>
                        }
                    </div>
                </div>	
            }
            
        </div>
        <!-- /content -->
        <footer class="footer">
           <a href="http://srkssolutions.com/">2016 © SRKS Software Solutions</a>
        </footer>

    </div>
    <!-- /wrapper -->


    <script type="text/javascript" src="~/js/prefixfree.min.js"></script>
    <script type="text/javascript" src="~/js/jquery-1.11.3.min.js"></script>
    <script type="text/javascript" src="~/js/jquery-ui.js"></script>
    <script type="text/javascript" src="~/js/bootstrap.min.js"></script>
  @*  <script src="~/Content1/VirtualKeyboard/js/jquery.keyboard.min.js"></script>*@
     <script type="text/javascript">

        $(window).load(function () {
            $('#loading').fadeOut(1000);

            // $(document).ready(function(){

            $('.collapsible > a').click(function () {
                $(this).parent().toggleClass('open');
                if ($(this).parent().siblings().hasClass('open')) {
                    $(this).parent().siblings().removeClass('open');
                }
                return false;
            }) // Collapsible

        }) // Ready.
    </script>
    @*turnoff autocomplete in all input fields*@
<script>
    $(document).ready(function () {
        $(document).on('focus', ':input', function () {
            $(this).attr('autocomplete', 'off');
        });
    });
</script>
   
