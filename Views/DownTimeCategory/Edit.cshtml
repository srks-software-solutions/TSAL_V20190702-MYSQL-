@model Tata.Models.tbldowntimecategory

@{
    ViewBag.Title = "Edit";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)  
    <div class="wrp clearfix">
        <div class="fluid">
            <div class="widget grid12">
                <div class="widget-header">
                    <div class="widget-title">
                        Editing Category
                    </div>
                </div>
                <!-- /widget-header -->

                <div class="widget-content pad20f">

                    <label for="input-1" class="stacked-label" style="resize: horizontal; width: 20%">Down Time Category</label>
                    @Html.TextBoxFor(model => model.DTCategory, new { @id = "DTCategory", @class = "form-control", @name = "DT Category", style = "width:89.7%", @placeholder = "Enter Down TimeCategory", @required = "required" })
                    @Html.ValidationMessageFor(model => model.DTCategory)
                    <label for="input-1" class="stacked-label" style="resize: horizontal; width: 40%">Down Time Category Description</label>
                    @Html.TextBoxFor(model => model.DTCategoryDesc, new { @id = "DTCategoryDesc", @class = "form-control", @name = "DTCategoryDesc", style = "width:89.7%", @placeholder = "Enter DownTime Category Description", @required = "required" })
                    @Html.ValidationMessageFor(model => model.DTCategoryDesc)


                   <div style="width: 3%; display: inline-block; height: inherit"></div>
@Html.ActionLink(" Back ", "Index", new { }, new { @class = "btn stacked-input fa fa-reply fa-1x", @style = "text-decoration:none;display:inline-block;color:black" })
 <div style="width: 20%; display: inline-block; height: inherit"></div>
<input type="submit" value="Update" class="btn btn-lavender inverse" style="width: 30%; display: inline-block; height: inherit;margin-top:2%;color:white;background-color:grey;font-size:1.1vw"/>
@*<input type="submit" value="Update" class="btn green btn-lg btn-primary inverse" style="width: 30%; display: inline-block; height: inherit; margin-top: 2%" />*@

                </div>
                <!-- /widget-content -->
            </div>
            <!-- /widget -->
        </div>
    </div>
            @Html.HiddenFor(model => model.DTC_ID)
            @Html.HiddenFor(model => model.IsDeleted)
            @Html.HiddenFor(model => model.CreatedOn)
            @Html.HiddenFor(model => model.CreatedBy)
            @Html.HiddenFor(model => model.ModifiedOn)
            @Html.HiddenFor(model => model.ModifiedBy)
}

